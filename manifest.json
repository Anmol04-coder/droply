{
  "manifest_version": 2,
  "name": "Droply",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
      "js": ["p5.js", "script.js"]
    }],
  "permissions": [
    "background",
    "tabs",
    "<all_urls>"
  ]
}
