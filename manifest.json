{
  "manifest_version": 2,
  "name": "Droply",
  "version": "1.0",
  "background": {
    "scripts": ["src/background/background.js"],
    "persistent": false
  },
  "content_scripts": [{
      "matches": [
        "<all_urls>"
      ],
      "js": ["src/content/script.js"]
  }],
  "permissions": [
    "background",
    "tabs",
    "<all_urls>",
    "activeTab"
  ],
  "browser_action": {
      "default_icon": "assets/logo.png",
      "default_popup": "src/popup/popup.html",
      "default_title": "Droply"
  }
}
